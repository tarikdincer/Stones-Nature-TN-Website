
@{
    Category category = ViewData["Category"] as Category;
    IEnumerable<Product> products = ViewData["Products"] as IEnumerable<Product>;
    ViewData["Title"] = category != null ? category.Name : "Stone Nature Tn";
}

@*<h1>@category.Name</h1>
@foreach(Product product in products){
    <h2>@product.Name</h2>
}*@

<section class="section-products pt-100">
		<div class="container pb-130 mt-100">
				<div class="row justify-content-center text-center">
						<div class="col-md-8 col-lg-6">
								<div class="header">
										<h2>@category.Name</h2>
								</div>
						</div>
				</div>
				<div class="row">
						<!-- Single Product -->
						@foreach(Product product in products){
							<div class="col-md-12 col-lg-6 col-xl-4">
									<div id="product-1" style="background: url(@product.ImagePath) no-repeat center; background-size:cover;"class="single-product">
										
										<div class="part-1">
													
											</div>
											<div class="part-2">
													<h3 class="product-title text-center">@product.Name</h3>
											</div>
									</div>
							</div>
						}
				</div>
		</div>
</section>

